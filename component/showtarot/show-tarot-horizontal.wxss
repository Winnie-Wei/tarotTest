@import "../../utils/font/font.wxss";

.scroll-box {
  display: flex;
  white-space: nowrap;
}
.scroll-box view {
  height: 170rpx;
  width: 90rpx;
  border: none;
  display: inline-block;
}
.scroll-item{
  display:inline-block;
  padding:20rpx 24rpx;
  vertical-align:top;
}
.scroll-tarot-pic{
  height: 170rpx;
  width: 90rpx;
  box-shadow: 0px 0px 6px 3px #e9e9e9;
  vertical-align:top;
}

.mean-title{
  width:100%;
  height:60rpx;
  display:block;
  line-height:60rpx;
  text-align: center;
  color: grey;
  font-size: 30rpx;
}

.view-panel{
  height:145px;
  float: left;
}