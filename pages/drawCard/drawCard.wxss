@import "../../utils/font/font.wxss";
page{
  height:100%;
  position: relative;
}
.shuf-style{
  height: 100%;
  position:fixed;
  top:0;
  left:0;
  transition:all 1.1s ease-out; 
}
.shuf-move{
  /* left: -200rpx; */
  /* transform:translateX(-200rpx);
  -webkit-transform:translateX(-200rpx);  */
  display:none;
}
/* ---------------- */
.confirm-btn{
  position: absolute;
  bottom: 50rpx;
  right: 20rpx;
}
.flexc{
  margin:0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around ;
}
.scroll-card{
  height: 100%;
  position:absolute;
  top:0;
}

.view-flex{
  width:20%;
  height:100px;
  border:5px solid transparent;
  position:relative;
}

.card-img{
  width:120rpx;
  height:200rpx;
  margin:0 auto;
  display:block;
}
.card-con{
  width:100%;
  height:100%;
}
.card-num{
  color:#F5DEB3;
  position:absolute;
  /* transition: all 0.1s linear; */
  top:6rpx;
  left:12px;
}

.card-lay{
  width:130rpx;
  height:200rpx;
  margin:0 auto;
  background: rgb(245, 244, 179);
  opacity: 0.92;
  position: absolute;
  top:0;
  left:10rpx;
  border-radius: 14rpx;
}

.card-ta{
  width:60rpx;
  height:60rpx;
  background:rgb(255, 157, 77);
  border-radius: 30rpx;
  margin:50% auto;
  text-align: center;
  line-height:60rpx;
  color: #333;
}
.draw-mov{
  height: 100%;
  position:absolute;
  top:0;
  padding:20rpx;

}
.draw-moview{
  width:120rpx;
  height:200rpx;
  /* position: relative; */
  margin:20rpx;
}
.draw-img{
  width:120rpx;
  height:200rpx;
  position: absolute;
  top:0;
  left:0;
}
.draw-imgt{
  z-index: 2;
  /* transition: all 1s ease; */
  transform-style: preserve-3d;
  /* backface-visibility: hidden; */
}
.draw-imgb{
  z-index: 1;
  /* transition: all 1s ease; */
  transform-style: preserve-3d;
  /* backface-visibility: hidden; */
}
.draw-num{
  color:#F5DEB3;
  position:absolute;
  top:6rpx;
  left:6px;
  z-index:3;
}
.img-down{
  transform: rotateX(180deg); 
}

.sun-btn{
  background: #F2C640;
  border-radius: 38rpx;
  width:76rpx;
  height:76rpx;
  position:absolute;
  bottom:30rpx;
  right:26rpx;
  font-size: 60rpx;
  line-height: 76rpx;
  text-align: center;
  color: #FFF;
  animation:sunbtn 10s infinite linear;
	-webkit-animation:sunbtn 10s infinite linear;
  z-index:100;
}
@keyframes sunbtn {
  from   { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}
.sun-btn-hover{
  color: #FFF;
}
.btn-bg{
  width:76rpx;
  height:76rpx;
  border-radius:38rpx;
  line-height: 76rpx;
  text-align: center;
  background: #F2C640;
  font-size:50rpx;
  color:#fff;
  box-shadow:5rpx 5rpx 5rpx #eec60a;
  position:absolute;
  right:26rpx;
  transition: all 0.4s linear;
}
.btn-draws,.btn-confirm,.btn-supply{
  bottom:130rpx;
}
