page{
  height:100%;
  position: relative;
}
.scroll-container{
  width: 100%;
}
.card-view {
  /* display:inline-block; */
  height: 100px;
  width:60px;
}
.bg-image{
  position: fixed;
  top:0;
  left:0;
  height:100%;
}
.card-view image {
  width: 60px;
  height: 100px;
  position: absolute;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  /* transition: all 0.1s linear; */
}

.card-num{
  color:#F5DEB3;
  position:absolute;
  /* transition: all 0.1s linear; */
  z-index:12;
}
.drag-arrow{
  position:absolute;
  bottom:135px;
  left:15px;
  height:10px;
  width:120px;
}

.scroll-box{
  display:flex;
  white-space:nowrap; 
  position: fixed;
  bottom: 0;  
  overflow: hidden;
}

.bg-image{
  position: fixed;
  top:0;
  left:0;
  height:100%;
}
.btn-shuffle{
  width:40px;
  height:40px;
  position:absolute;
  bottom:185px;
  right:10px;
}

.btn-draw{
  width:40px;
  height:40px;
  position:absolute;
  bottom:130px;
  right:10px;
}

.card-content{
  position: absolute;
  bottom: 0;
  height: 150px;
}

.arrow{
  width: 30px;
  height: 30px;
  position: absolute;
  bottom: 50px;
}
.arrow-right{
  right:0;
}

.card-show{
  height: 100%;
  overflow: hidden;
  margin-left:30px;
}

.card-scroll{
  width:100%;
  height:100px;
  position: fixed;
  bottom: 10px;
  white-space:nowrap; 
  overflow: hidden;
}

.card-block{
  display: inline-block;
}
