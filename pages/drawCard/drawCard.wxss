.scroll-container{
  width: 100%;
  overflow: hidden;

}
.card-view {
  display:inline-block;
  height: 100px;
}
.bg-image{
  position: fixed;
  top:0;
  left:0;
}
.card-view image {
  width: 60px;
  height: 100px;
  position: absolute;
  transform-style: preserve-3d;
  backface-visibility: hidden;
  transition: all 0.1s linear;
}

.card-num{
  color:#F5DEB3;
  position:absolute;
  transition: all 0.1s linear;
  z-index:12;
}
.drag-arrow{
  position:absolute;
  bottom:135px;
  left:15px;
  height:10px;
  width:120px;
}

.scroll-box{
  display:flex;
  white-space:nowrap; 
  overflow:hidden;
  position: fixed;
  bottom: 0;  
}

.btn-shuffle{
  width:40px;
  height:40px;
  position:absolute;
  bottom:10px;
  right:10px;
}

.btn-draw{
  width:40px;
  height:40px;
  position:absolute;
  bottom:60px;
  right:10px;
}
