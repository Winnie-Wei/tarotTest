page{
  font-size: 18px;
}

.startDraw-bg{
  position: fixed;
  top:-50rpx;
  left:0;
  right:0;
  margin:0px auto;
  width: 400rpx;
  animation:bgRoute 4.5s infinite linear;
	-webkit-animation:bgRoute 4.5s infinite linear;
}
@keyframes bgRoute {
  from   { transform: rotateY(0deg); }
  to { transform: rotateY(360deg); }
}

.pick-type{
  position: fixed;
  top: 390rpx;
  left:0;
  right:0;
  margin:0px auto;
}
.pick-content{
  width:100%;
  height:50px;
  line-height: 50px;
  color:rgb(44, 51, 58);
  padding-left:29%;
}
.startDraw-btn{
  width:132px;
  height:38px;
  line-height: 38px;
  text-align: center;
  background: linear-gradient(to bottom right, rgba(109, 119, 122, 1) , rgba(6, 4, 7, 19));
  margin: 25px auto;
  border-radius:8px;
  color: #fff;
}